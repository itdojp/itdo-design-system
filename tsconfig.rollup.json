{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": [
    "src/test",
    "src/stories",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ]
}
